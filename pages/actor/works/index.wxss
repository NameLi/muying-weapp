.works-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  height: 80rpx;
  font-size: 28rpx;
}

.works-header .works-count {
  font-weight: bold;
}

.works-list {
  padding: 0 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.works-list .movie-row {
  width: 220rpx;
  padding-bottom: 30rpx;
  margin-right: 0;
  display: block;
}

.works-list .movie-row .poster-wrapper {
  position: relative;
  width: 100%;
  height: 320rpx;
  overflow: hidden;
  border-radius: 6rpx;
}

.works-list .movie-row .poster-wrapper .img-cover {
  width: 220rpx;
  height: 320rpx;
  background-color: #eee;
}

.works-list .place-holder {
  height: 0;
}
