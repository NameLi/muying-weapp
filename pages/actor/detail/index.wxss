page {
  background-color: #f5f5f5;
}

.actor .header-btn {
  color: #fff;
  padding: 0 40rpx;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 100rpx;
  background-color: rgba(255, 255, 255, 0.25);
}

.actor .header-btn.is-focus {
  background-color: rgba(249, 106, 25, 0.3);
}

.actor .actor-info {
  position: relative;
  height: 460rpx;
  background-color: rgba(249, 106, 25, 0.85);
  transition: height .2s;
}

.actor .actor-info .actor-avatar {
  height: 100%;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center 20%;
}

.actor .actor-info .actor-avatar-larger {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
}

.actor .actor-info .actor-focus {
  position: absolute;
  right: 20rpx;
  bottom: 60rpx;
  color: #fff;
  padding: 0 40rpx;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 100rpx;
  background-color: rgba(255, 255, 255, 0.25);
}

.actor .actor-info .actor-focus.is-focus {
  background-color: rgba(229, 72, 71, 0.3);
}

.actor .actor-info .actor-info-footer {
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  padding: 50rpx 200rpx 30rpx 20rpx;
  color: #fff;
  background-image: linear-gradient(transparent 0%, rgba(0, 0, 0, 0.4) 100%);
}

.actor .actor-info .actor-info-footer .actor-name {
  font-size: 40rpx;
  line-height: 48rpx;
}

.actor .actor-info .actor-info-footer .actor-name_en {
  font-size: 24rpx;
  color: #f3f3f3;
  line-height: 48rpx;
}

.actor .actor-info .actor-info-footer .actor-extra {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #ddd;
}

.actor .actor-info .actor-info-footer .actor-extra .delimiter {
  margin: 0 10rpx;
}

.actor .summary {
  white-space: normal;
  font-size: 28rpx;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
  text-align: justify;
}

.actor .summary.no-data {
  height: 160rpx;
  line-height: 160rpx;
  text-align: center;
  color: #999;
  font-size: 24rpx;
}
