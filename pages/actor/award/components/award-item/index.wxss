.award-item {
  padding: 15rpx 30rpx;
}

.award-item .award-year {
  z-index: 9;
  position: sticky;
  top: 0;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: var(--color-theme);
  font-weight: 700;
  background-color: #fff;
}

.award-item .award-children {
  padding: 12rpx 0;
}

.award-item .award-children .award-info {
  font-size: 28rpx;
}

.award-item .award-children .award-info .award-title {
  font-weight: bold;
  line-height: 40rpx;
}

.award-item .award-children .award-info .award-type {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999;
}

.award-item .award-children .award-movie {
  display: flex;
  margin-top: 20rpx;
  padding: 10rpx 12rpx;
  background-color: #fafafa;
  height: 126rpx;
  overflow: hidden;
}

.award-item .award-children .award-movie .movie-poster {
  width: 72rpx;
}

.award-item .award-children .award-movie .movie-poster .poster {
  width: 72rpx;
  height: 106rpx;
  border-radius: 6rpx;
}

.award-item .award-children .award-movie .movie-detail {
  flex: 1;
  margin-left: 20rpx;
}

.award-item .award-children .award-movie .movie-detail .movie-title {
  font-size: 28rpx;
  font-weight: bold;
  line-height: 36rpx;
}

.award-item .award-children .award-movie .movie-detail .movie-rating {
  display: flex;
  align-items: center;
}

.award-item .award-children .award-movie .movie-detail .movie-rating .rating-value {
  margin-left: 4rpx;
  font-size: 24rpx;
  color: #f7ba2a;
}

.award-item .award-children .award-movie .movie-detail .movie-info {
  color: #777;
  line-height: 1.6;
  font-size: 24rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
