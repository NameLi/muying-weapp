.movie-row {
  vertical-align: top;
  padding-bottom: 20rpx;
  width: 220rpx;
  box-sizing: border-box;
}

.movie-row .poster-wrapper {
  position: relative;
  width: 100%;
  height: 320rpx;
  overflow: hidden;
  border-radius: 6rpx;
}

.movie-row .poster-wrapper .img-cover {
  width: 220rpx;
  height: 320rpx;
  background-color: #eee;
  object-fit: cover;
}

.movie-row .poster-wrapper .info {
  position: absolute;
  padding: 0 16rpx;
  left: 0;
  bottom: 0;
  height: 60rpx;
  width: 100%;
  font-size: 24rpx;
  line-height: 76rpx;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
}

.movie-row .poster-wrapper .info .info-epispde {
  float: left;
  color: #ccc;
}

.movie-row .poster-wrapper .info .info-rating {
  float: right;
  color: orange;
}

.movie-row .title {
  padding-top: 12rpx;
  line-height: 36rpx;
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
}
