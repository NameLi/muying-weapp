.nav-group-wrapper {
  height: 280rpx;
}

.nav-group-wrapper .nav-group {
  padding-top: 20rpx;
}

.nav-group-wrapper .nav-group.is-fixed {
  z-index: 9;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.nav-group-wrapper .nav-group-fixed {
  z-index: 8;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  background-color: #f5f5f5;
}

.nav-group-wrapper .nav-group-fixed .current-menu {
  text-align: center;
}

.nav-group-wrapper .nav-group-fixed .m-icon {
  float: right;
  text-align: center;
  width: 72rpx;
  color: var(--color-theme);
}
