.movie-rating-wrapper {
  margin: 10rpx 20rpx;
  border-radius: 12rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.25);
  padding: 30rpx 0;
}

.movie-rating-wrapper .wish-count {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 136rpx;
}

.movie-rating-wrapper .wish-count .count-inner .count {
  padding: 0 10rpx;
  font-size: 48rpx;
  color: #feb300;
  font-weight: bold;
}

.movie-rating-wrapper .wish-count .release-date {
  position: absolute;
  right: 20rpx;
  bottom: -15rpx;
  color: #e5e5e5;
}

.movie-rating-wrapper .no-rating {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 136rpx;
}

.movie-rating-wrapper .rating-container {
  display: flex;
  justify-content: space-around;
}

.movie-rating-wrapper .rating-container .rating-map {
  min-width: 120rpx;
  text-align: center;
}

.movie-rating-wrapper .rating-container .rating-map .rating-from {
  position: relative;
}

.movie-rating-wrapper .rating-container .rating-map .rating-from .icon {
  position: absolute;
  top: -10rpx;
  right: -13rpx;
  font-size: 28rpx;
  padding: 10rpx;
}

.movie-rating-wrapper .rating-container .rating-map .rating-score {
  height: 76rpx;
  line-height: 76rpx;
  font-size: 44rpx;
  font-weight: bold;
  color: #feb300;
}

.movie-rating-wrapper .rating-container .rating-map .rating-count {
  color: #fff;
}

.movie-rating-wrapper .rating-container .line {
  width: 1rpx;
  background-color: rgba(255, 255, 255, 0.2);
}

.movie-rating-wrapper .rating-footer .status-count {
  display: flex;
  align-items: center;
  justify-content: right;
  margin: 40rpx 30rpx 0;
  color: #999;
}

.movie-rating-wrapper .tip-content {
  text-align: left;
  text-align: justify;
  line-height: 1.6;
}
