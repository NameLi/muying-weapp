.skeleton-wrapper {
  z-index: 99;
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background-color: #fff;
}

.skeleton-wrapper .skeleton {
  top: 0;
}

.skeleton-wrapper.is-half {
  top: 296rpx;
}

.skeleton-wrapper .movie-info {
  display: flex;
  padding: 10rpx 20rpx 20rpx;
}

.skeleton-wrapper .movie-info .poster {
  width: 192rpx;
  height: 268rpx;
  border-radius: 8rpx;
  background-color: var(--color-skeleton);
}

.skeleton-wrapper .movie-info .info {
  position: relative;
  margin-left: 25rpx;
  flex: 1;
}

.skeleton-wrapper .movie-info .info .title {
  margin-top: 10rpx;
  height: 42rpx;
  background-color: var(--color-skeleton);
}

.skeleton-wrapper .movie-info .info .subtitle {
  margin-top: 12rpx;
  height: 36rpx;
  background-color: var(--color-skeleton);
}

.skeleton-wrapper .movie-info .info .info-brief .info-item {
  margin-top: 12rpx;
  height: 32rpx;
  background-color: var(--color-skeleton);
}

.skeleton-wrapper .movie-info .info .btn-group {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.skeleton-wrapper .movie-info .info .btn-group .btn {
  width: 226rpx;
  height: 52rpx;
  border-radius: 8rpx;
  background-color: var(--color-skeleton);
}

.skeleton-wrapper .space {
  height: 268rpx;
}

.skeleton-wrapper .rating-container {
  margin: 20rpx 20rpx 10rpx;
  height: 200rpx;
  border-radius: 12rpx;
  background-color: var(--color-skeleton);
}

.skeleton-wrapper .sunmmary {
  margin: 30rpx 20rpx 0;
}

.skeleton-wrapper .sunmmary .line {
  height: 32rpx;
  margin-top: 12rpx;
  border-radius: 4rpx;
  background-color: var(--color-skeleton);
}
