.movie-bar-wrapper {
  height: 100rpx;
}

.movie-bar-wrapper .movie-bar {
  z-index: 9;
  position: fixed;
  left: 0;
  bottom: 0;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  box-sizing: content-box;
  width: 100%;
  height: 90rpx;
  border-top: 1rpx solid #eee;
  box-shadow: 0 0 4rpx #f5f5f5;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  overflow: hidden;
  color: #7f889b;
}

.movie-bar-wrapper .movie-bar .review {
  margin-left: 10rpx;
  padding: 0 28rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 100rpx;
}

.movie-bar-wrapper .movie-bar .review .review-icon {
  font-size: 32rpx;
}

.movie-bar-wrapper .movie-bar .review .review-count {
  padding: 0 12rpx;
  font-size: 28rpx;
}

.movie-bar-wrapper .movie-bar .bar-tool {
  text-align: center;
}

.movie-bar-wrapper .movie-bar .bar-tool .tool-item {
  vertical-align: top;
  display: inline-block;
  width: 80rpx;
  margin: 0 2rpx;
}

.movie-bar-wrapper .movie-bar .bar-tool .tool-item .tool-item-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 48rpx;
}

.movie-bar-wrapper .movie-bar .bar-tool .tool-item .tool-item-icon .icon {
  font-size: 40rpx;
}

.movie-bar-wrapper .movie-bar .bar-tool .tool-item .tool-item-icon.is-checked {
  color: var(--color-theme);
}

.movie-bar-wrapper .movie-bar .bar-tool .tool-item .tool-item-count {
  height: 32rpx;
  line-height: 28rpx;
  font-size: 24rpx;
}
