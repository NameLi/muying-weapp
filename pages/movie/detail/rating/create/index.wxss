.close-icon {
  background-color: #ddd;
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.close-icon .icon {
  color: #fff;
  font-size: 22rpx;
}

.create-btn {
  font-size: 28rpx;
  color: var(--color-theme);
}

.rate-content .rate-score {
  margin-top: 20rpx;
  text-align: center;
  font-size: 28rpx;
  line-height: 60rpx;
  height: 60rpx;
  color: var(--color-theme);
}

.rate-content .rate {
  margin-top: 10rpx;
  text-align: center;
}

.rate-content .form {
  margin-top: 60rpx;
}

.rate-content .form .field-item {
  position: relative;
  margin: 0 30rpx;
  padding: 20rpx 0;
}

.rate-content .form .field-item .content {
  padding: 20rpx;
  width: 100%;
  border: 1rpx solid #e5e5e5;
  border-radius: 12rpx;
}

.rate-content .form .field-item .content {
  min-height: 200rpx;
  line-height: 1.5;
}

.rate-content .form .field-item .placeholder {
  color: #999;
}

.rate-content .form .field-item .field-word-count {
  position: absolute;
  right: 20rpx;
  bottom: 40rpx;
  color: #c5c5c5;
}
