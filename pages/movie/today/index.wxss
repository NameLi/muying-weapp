.container .menu-wrapper {
  z-index: 999;
  position: fixed;
  left: 0;
  top: 0;
  display: flex;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.container .menu-wrapper .menu {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
}

.container .menu-wrapper .menu.is-active {
  color: var(--color-theme);
}

.container .main {
  padding-top: 105rpx;
}
