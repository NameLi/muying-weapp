.main {
  padding: 30rpx;
}

.main .success {
  height: 40vh;
  line-height: 40vh;
  text-align: center;
  font-size: 28rpx;
  color: var(--color-theme);
}

.main .container {
  position: relative;
}

.main .container .content {
  padding: 20rpx;
  width: 100%;
  font-size: 28rpx;
  border: 0;
  border-radius: 8rpx;
  background-color: #f5f5f5;
}

.main .container .word-count {
  z-index: 1;
  position: absolute;
  right: 15rpx;
  bottom: 15rpx;
  color: #666;
}

.main .submit {
  margin: 40rpx 0 0;
}
