.menu-list {
  z-index: 1;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 30rpx;
  margin-top: -80rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background-color: #fff;
  box-shadow: 0 6rpx 6rpx #eee;
}

.menu-list .menu-item {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  flex: 1;
  position: relative;
}

.menu-list .menu-item .menu-count {
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  color: var(--color-theme);
  font-size: 40rpx;
}

.menu-list .menu-item .menu-name {
  margin-top: 16rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #666;
}
