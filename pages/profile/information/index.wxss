page {
  background-color: #f5f5f5;
}

.main .avatar-wrapper {
  border: none;
  padding: 0;
  margin: 0;
  border-radius: 0;
  line-height: auto;
  height: 60rpx;
  background-color: #fff;
}

.main .avatar-wrapper::after, .main .avatar-wrapper::before {
  display: none;
}

.main .avatar-wrapper .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 4rpx;
}

.main .group-two {
  margin-top: 20rpx;
}

.main .birthday {
  width: 100%;
  height: 40rpx;
  font-size: 28rpx;
  color: #999;
}

.upload-input {
  display: none;
}

.modal-position {
  margin-top: 0;
}

.modal-position.is-focus {
  margin-top: -25vh;
}

.username-content {
  position: relative;
  display: flex;
  align-items: center;
  height: 72rpx;
}

.username-content .username {
  padding: 0 20rpx;
  width: 100%;
  height: 72rpx;
  border: 1rpx solid #e5e5e5;
  font-size: 28rpx;
  text-align: left;
  border-radius: 4rpx;
  color: #000;
}

.username-content .count {
  position: absolute;
  right: 0;
  top: 0;
  padding: 0 20rpx;
  color: #999;
  font-size: 24rpx;
  height: 72rpx;
  line-height: 72rpx;
}
