.skeleton-container {
  z-index: 99;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  width: 100%;
  background-color: #fff;
}

.skeleton-container .skeleton {
  padding: 30rpx;
}

.skeleton-container .skeleton .title {
  height: 48rpx;
  background-color: #f5f5f5;
}

.skeleton-container .skeleton .author {
  display: flex;
  align-items: center;
  margin: 40rpx 0;
  height: 80rpx;
}

.skeleton-container .skeleton .author .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
}

.skeleton-container .skeleton .author .username {
  margin-left: 26rpx;
  height: 36rpx;
  width: 300rpx;
  background-color: #f5f5f5;
}

.skeleton-container .skeleton .content {
  margin-top: 20rpx;
}

.skeleton-container .skeleton .content .line {
  margin-top: 20rpx;
  height: 36rpx;
  background-color: #f5f5f5;
}
