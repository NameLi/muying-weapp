.container.search-result .menu-list {
  z-index: 3;
  position: fixed;
  left: 0;
  right: 0;
  padding-top: 10rpx;
  top: 80rpx;
  padding-left: 12rpx;
  height: 84rpx;
  color: #666666;
  border-bottom: 1px solid #eee;
  background-color: #fff;
}

.container.search-result .menu-list::after {
  content: "";
  position: absolute;
  left: 68rpx;
  bottom: 4rpx;
  width: 46rpx;
  height: 6rpx;
  background-color: var(--color-theme);
  border-radius: 4rpx;
  transform: translateX(-50%);
  transition: left 0.2s;
}

.container.search-result .menu-list.menu-movie::after {
  left: 68rpx;
}

.container.search-result .menu-list.menu-actor::after {
  left: 180rpx;
}

.container.search-result .menu-list.menu-role::after {
  left: 292rpx;
}

.container.search-result .menu-list .menu-item {
  display: inline-block;
  width: 112rpx;
  height: 74rpx;
  line-height: 56rpx;
  font-weight: bold;
  font-size: 28rpx;
  text-align: center;
  transition: font-size 0.2s;
}

.container.search-result .menu-list .menu-item.is-active {
  font-size: 32rpx;
}

.container.search-result .result-list {
  padding: 80rpx 0 15rpx;
}

.container.search-result .result-list .no-data {
  height: 400rpx;
  line-height: 400rpx;
  text-align: center;
  color: #888;
}

.container.search-result .result-list .movie-result .poster-wrapper {
  width: 134rpx;
  height: 180rpx;
}

.container.search-result .result-list .actor-result .actor-avatar {
  width: 134rpx;
  height: 180rpx;
}

.container.search-result .result-list .role-result .role-avatar {
  width: 134rpx;
  height: 180rpx;
}

.container.search-result .init-loading {
  z-index: 99;
  position: fixed;
  left: 0;
  top: 164rpx;
  right: 0;
  bottom: 0;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}
