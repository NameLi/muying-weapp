.search-wrapper {
  height: 100rpx;
}

.search-wrapper .search {
  z-index: 99;
  position: fixed;
  left: 0;
  top: 0;
  padding: 15rpx 0;
  width: 100%;
  height: 60rpx;
  display: flex;
  box-sizing: content-box;
  background-color: #fff;
}

.search-wrapper .search .search-form {
  display: flex;
  align-items: center;
  flex: 1;
  margin-left: 30rpx;
  padding: 0 20rpx;
  position: relative;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 60rpx;
  background: whitesmoke;
}

.search-wrapper .search .search-form .icon {
  width: 40rpx;
  color: #999;
  font-size: 32rpx;
  text-align: center;
}

.search-wrapper .search .search-form .search-input {
  flex: 1;
  margin-left: 10rpx;
  height: 60rpx;
  color: #999;
  font-size: 28rpx;
  vertical-align: top;
  border: none;
  background: transparent;
}

.search-wrapper .search .search-form .icon-clear {
  z-index: 9;
  position: relative;
  width: 44rpx;
  height: 44rpx;
  line-height: 44rpx;
  font-size: 16rpx;
  text-align: center;
  border-radius: 50%;
  color: #fff;
  background-color: #c5c5c5;
  transform: scale(0.76);
}

.search-wrapper .search .go-back {
  width: 120rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #777;
}
