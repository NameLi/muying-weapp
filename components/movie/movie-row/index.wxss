.movie-row {
  position: relative;
  vertical-align: top;
  display: inline-block;
  margin-right: 16rpx;
  padding-bottom: 15rpx;
  width: 188rpx;
}

.movie-row .poster-wrapper {
  position: relative;
  width: 100%;
  height: 268rpx;
  overflow: hidden;
  border-radius: 6rpx;
}

.movie-row .poster-wrapper .img-cover {
  width: 188rpx;
  height: 268rpx;
  object-fit: cover;
  background-color: rgba(245, 245, 245, 0.45);
}

.movie-row .poster-wrapper .category-tag {
  z-index: 3;
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  padding: 4rpx 8rpx;
  font-size: 20rpx;
  color: #fff;
  border-radius: 6rpx;
  background-color: rgba(255, 165, 0, 0.8);
}

.movie-row .poster-wrapper .info {
  position: absolute;
  padding: 0 10rpx;
  left: 0;
  bottom: 0;
  height: 60rpx;
  width: 100%;
  font-size: 24rpx;
  line-height: 72rpx;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.45));
}

.movie-row .poster-wrapper .info.white {
  color: #fff;
}

.movie-row .poster-wrapper .info .episode {
  float: left;
  color: #ccc;
}

.movie-row .poster-wrapper .info .rating {
  float: right;
  color: orange;
  font-weight: 400;
}

.movie-row .title {
  padding-top: 12rpx;
  line-height: 36rpx;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
