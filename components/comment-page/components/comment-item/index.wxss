.comment-item {
  padding: 30rpx 0;
  margin: 0 20rpx;
  position: relative;
}

.comment-item .comment-header {
  display: flex;
  align-items: center;
  height: 60rpx;
}

.comment-item .comment-header .author-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f7f7f7;
}

.comment-item .comment-header .author-info {
  display: flex;
  margin-left: 20rpx;
  flex: 1;
}

.comment-item .comment-header .author-info .author-name {
  font-size: 24rpx;
  font-weight: 400;
}

.comment-item .comment-header .author-info .is-author {
  margin-left: 16rpx;
  height: 32rpx;
  line-height: 24rpx;
  font-size: 20rpx;
  color: #fff;
  padding: 4rpx;
  text-align: center;
  border-radius: 6rpx;
  opacity: .85;
  background-color: var(--color-theme);
}

.comment-item .comment-header .author-info .author-rating {
  height: 32rpx;
  line-height: 32rpx;
}

.comment-item .comment-header .more {
  width: 40rpx;
  text-align: center;
}

.comment-item .comment-content {
  font-size: 28rpx;
  padding: 12rpx 0 4rpx 70rpx;
  line-height: 44rpx;
  color: #333;
  word-break: break-all;
}

.comment-item .comment-content .is-delete {
  display: inline-block;
  padding: 0 12rpx;
  background-color: #f5f5f5;
  font-size: 24rpx;
  border-radius: 6rpx;
  color: #999;
}

.comment-item .comment-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12rpx 0 0 70rpx;
  height: 44rpx;
  color: #999;
  font-size: 24rpx;
}

.comment-item .comment-footer::before {
  content: "";
  border-bottom: 1rpx solid #f5f5f5;
  background: #f0f0f0;
  position: absolute;
  left: 70rpx;
  right: 0;
  bottom: 0;
}

.comment-item .comment-footer .tool-list {
  display: flex;
  align-items: center;
}

.comment-item .comment-footer .tool-list .tool-item {
  padding: 5rpx 10rpx;
  min-width: 70rpx;
  text-align: right;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.comment-item .comment-footer .tool-list .tool-item .like-icon {
  margin-left: 6rpx;
}

.comment-item .comment-footer .tool-list .tool-item .like-icon.is-active {
  animation: jump 0.4s ease-in-out;
}

.comment-item .comment-footer .tool-list .tool-item .like-icon.is-disabled {
  animation: none;
}

.comment-item .comment-footer .tool-list .tool-item .like-icon.is-disabled .m-icon {
  color: #ccc !important;
}

.comment-item .comment-footer .tool-list .tool-item .m-icon {
  font-size: 24rpx;
}

@keyframes jump {
  0% {
    transform: scale(1);
  }
  60% {
    transform: scale(1.2);
  }
  100% {
    transform: scale(1);
  }
}
