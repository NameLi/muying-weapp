.article-item {
  position: relative;
  padding: 20rpx 32rpx;
  background-color: #fff;
}

.article-item:nth-last-child(1)::after {
  display: none;
}

.article-item .article-title .title {
  white-space: normal;
  text-align: justify;
  font-weight: bold;
  font-size: 28rpx;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.article-item .article-author {
  display: flex;
  align-items: center;
  height: 68rpx;
}

.article-item .article-author .author-avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}

.article-item .article-author .author-name {
  margin-left: 6rpx;
  line-height: 40rpx;
  font-weight: bold;
  color: #676767;
}

.article-item .article-content {
  display: flex;
  height: 88rpx;
}

.article-item .article-content .article-brief {
  line-height: 1.6;
  font-size: 28rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  white-space: normal;
}

.article-item .article-content .article-cover {
  position: relative;
  margin-left: 12rpx;
  width: 160rpx;
  flex-shrink: 0;
}

.article-item .article-content .article-cover .cover {
  position: absolute;
  bottom: 6rpx;
  width: 160rpx;
  height: 120rpx;
  object-fit: cover;
  border-radius: 6rpx;
  background-color: #f5f5f5;
}

.article-item .article-footer {
  margin-top: 12rpx;
  display: flex;
  align-items: center;
  height: 48rpx;
  font-size: 24rpx;
  color: #b0b3bb;
}

.article-item .article-footer .tool-item__delimiter {
  margin: 0 16rpx;
}
